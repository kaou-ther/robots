

<div class="container">
  <div class="row">
    <div class="col-12 d-flex align-content-start">
      <%= link_to "◀︎ Back to robots", robots_path %>
    </div>
    <div class="row mt-4">
    <div class="col-6">
      <div class="card-show d-flex flex-column">
        <h1><%= @robot.name %></h1>
        <p>Very nice choice!</p>
        <p>You'll have a lot of fun with <%= @robot.name %>!!</p>
        <p><%= @robot.description %></p>
        <p>Such a jewel of technology for only <%= @robot.price.round %>€</p>
        <div class="card-photo-show"><%= cl_image_tag @robot.photo.key if @robot.photo.attached? %></div>
        <div class="container d-flex justify-content-center mt-4 py-1">
          <%= link_to "Order", new_robot_order_path(@robot), class: "btn small-btn" %>
          <% if current_user == @robot.user %>
          <%= link_to "Edit", edit_robot_path(@robot), class: "btn small-btn" %>
          <%= link_to "Delete", robot_path(@robot), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn small-btn btn-outline" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-6">
      <br>
        <div class="mt-60 ms-5">
        <div style="width: 100%; height: 620px;"
            data-controller="map"
            data-map-markers-value="<%= [{ lat: @robot.latitude,
        lng: @robot.longitude }].to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
  </div>

</div>
</div>
